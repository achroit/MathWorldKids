<GameActionScreen>:
    on_enter: self.new_game()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.15
            Label:
                id: label_1
                text: 'Errors: 0'
            Label:
                id: label_2
                text: 'Session name'
            Label:
                id: label_3
                text: 'Progress 1/10'
        Label:
            id: task
            text: 'The current task: 5 + 5'
            font_size: 45
        GridLayout:
            cols: 2
            padding: 25
            Button:
                id: button_1
                text: ''
                on_release: root.check_answer(self)
            Button:
                id: button_2
                text: ''
                on_release: root.check_answer(self)
            Button:
                id: button_3
                text: ''
                on_release: root.check_answer(self)
            Button:
                id: button_4
                text: ''
                on_release: root.check_answer(self)

