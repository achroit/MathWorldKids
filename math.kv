
#Rule for all Labels
<Label>:
    font_name: 'ArchitectsDaughter.ttf'
    color: 0,0,0,1
    font_size: 20

#Rule for all Widgets
<Widget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

#Button
<Button>:
    background_normal: './data/normal.png'
    background_down: './data/down.png'

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.5
            text: 'MathWorldKids'
            font_size: 45
        BoxLayout:
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5}
            padding: 25
            spacing: 25
            orientation: 'vertical'
            Button:
                text: 'Start'
                on_release: root.manager.current = 'start'
            Button:
                text: 'Achievements'
                on_release: root.manager.current = 'progress'
            Button:
                text: 'Tips & Tricks'
                on_release: root.manager.current = 'help'
            Button:
                text: 'About'
                on_release: root.manager.current = 'about'
            Button:
                text: 'Quit'
                on_release: exit()

<StartScreen>:
    BoxLayout:
        padding: 25
        spacing: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Start - Select a category'
        BoxLayout:
            orientation: 'vertical'
            spacing: 25
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'add'
                on_release: root.manager.current = 'addChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'subtract'
                on_release: root.manager.current = 'subChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'multiply'
                on_release: root.manager.current = 'multiChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'division'
                on_release: root.manager.current = 'divChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'greater/smaller'
                on_release: root.manager.current = 'comingsoon'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'Challenge'
                on_release: root.manager.current = 'comingsoon'
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_release: root.manager.current = 'menu'

