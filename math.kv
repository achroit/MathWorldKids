<PopUpQuit>:
    size_hint: .5, .2
    auto_dismiss: False
    title: 'Quit current game?'
    title_color: 0,0,0,1
    BoxLayout:
        padding: 10
        Button:
            text: 'No'
            on_release: root.dismiss()
        Button:
            text: 'Yes'
            on_release:
                app.sm.current = 'menu'
                root.dismiss()
