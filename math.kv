#:kivy 1.8.1
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Put logo here!'
        BoxLayout:
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5}
            padding: 25
            spacing: 25
            orientation: 'vertical'
            Button:
                text: 'Start'
                on_press: root.manager.current = 'start'
            Button:
                text: 'Achievements'
                on_press: root.manager.current = 'progress'
            Button:
                text: 'Tips & Tricks'
                on_press: root.manager.current = 'help'
            Button:
                text: 'About'
                on_press: root.manager.current = 'about'
            Button:
                text: 'Quit'
                on_press: exit()

<StartScreen>:
    BoxLayout:
        padding: 25
        spacing: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Start - Select a category'
        BoxLayout:
            orientation: 'vertical'
            spacing: 25
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'add'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'subtract'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'multiply'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'division'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'greater/smaller'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'Challenge'
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'

<ProgressScreen>:
    BoxLayout:
        spacing: 25
        padding: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Progress - View all your Achievements'
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'Basic'
                Label:
                    text: 'Basic achievements'
            TabbedPanelItem:
                text: 'Challenge'
                Label:
                    text: 'Challenge achievements'
            TabbedPanelItem:
                text: 'Special'
                Label:
                    text: 'Coming soon!'
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'

<HelpScreen>:
    BoxLayout:
        spacing: 25
        padding: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Help Screen - Some tips to improve yourself'
        Label:
            text: root.help_text()
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'

<AboutScreen>:
    BoxLayout:
        spacing: 25
        padding: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'About - Information about this app'
        Label:
            text: root.about_text()
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'