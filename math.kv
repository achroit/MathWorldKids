#:kivy 1.8.1
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Put logo here!'
        BoxLayout:
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5}
            padding: 25
            spacing: 25
            orientation: 'vertical'
            Button:
                text: 'Start'
                on_press: root.manager.current = 'start'
            Button:
                text: 'Achievements'
                on_press: root.manager.current = 'progress'
            Button:
                text: 'Tips & Tricks'
                on_press: root.manager.current = 'help'
            Button:
                text: 'About'
                on_press: root.manager.current = 'about'
            Button:
                text: 'Quit'
                on_press: exit()

<StartScreen>:
    BoxLayout:
        padding: 25
        spacing: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Start - Select a category'
        BoxLayout:
            orientation: 'vertical'
            spacing: 25
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'add'
                on_press: root.manager.current = 'addChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'subtract'
                on_press: root.manager.current = 'subChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'multiply'
                on_press: root.manager.current = 'multiChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'division'
                on_press: root.manager.current = 'divChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'greater/smaller'
                on_press: root.manager.current = 'greaterSmallerChooser'
            Button:
                size_hint: 0.7, 1
                pos_hint: {'center_x': 0.5}
                text: 'Challenge'
                on_press: root.manager.current = 'challengeChooser'
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'

<AddChooseDifficulty,SubChooseDifficulty,MultiChooseDifficulty,DivChooseDifficulty,GreaterSmallerChooseDifficulty,ChallengeChooseDifficulty>:
    BoxLayout:
        padding: 25
        spacing: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Add - Using the + to achieve great things'
        ScrollView:
            size_hint: 1,1
            BoxLayout:
                orientation: 'vertical'
                spacing: 25
                size_hint_y: None
                height: 1000
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category1
                    on_press: root.manager.current = 'game'
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category2
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category3
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category4
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category5
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category6
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category7
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category8
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category9
                Button:
                    size_hint: 0.7, 1
                    height: 40
                    pos_hint: {'center_x': 0.5}
                    text: root.category10
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'start'

<GameActionScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.15
            Label:
                text: 'Errors: 0'
            Label:
                text: 'Session name'
            Label:
                text: 'Progress 1/10'
        Label:
            text: 'The current task: 5 + 5'
        GridLayout:
            cols: 2
            padding: 25
            Button:
                text: '2'
            Button:
                text: '4'
            Button:
                text: '8'
            Button:
                text: '10'

<ProgressScreen>:
    BoxLayout:
        spacing: 25
        padding: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Progress - View all your Achievements'
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'Basic'
                Label:
                    text: 'Basic achievements'
            TabbedPanelItem:
                text: 'Challenge'
                Label:
                    text: 'Challenge achievements'
            TabbedPanelItem:
                text: 'Special'
                Label:
                    text: 'Coming soon!'
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'

<HelpScreen>:
    BoxLayout:
        spacing: 25
        padding: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'Help Screen - Some tips to improve yourself'
        Label:
            text: root.help_text()
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'

<AboutScreen>:
    BoxLayout:
        spacing: 25
        padding: 25
        orientation: 'vertical'
        Label:
            size_hint: 0.5, 0.15
            pos_hint: {'center_x': 0.45}
            text: 'About - Information about this app'
        Label:
            text: root.about_text()
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.45}
            text: 'back'
            on_press: root.manager.current = 'menu'
